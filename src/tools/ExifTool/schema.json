{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "FileName": {
            "type": "string",
            "description": "The name of the image file"
        },
        "FileSize": {
            "type": "integer",
            "description": "The size of the image file in bytes"
        },
        "Make": {
            "type": "string",
            "description": "The manufacturer of the camera"
        },
        "Model": {
            "type": "string",
            "description": "The model of the camera"
        },
        "FileType": {
            "type": "string",
            "description": "The type of the file"
        },
        "MIMEType": {
            "type": "string",
            "description": "The MIME type of the file"
        },
        "ImageWidth": {
            "type": "integer",
            "description": "The width of the image in pixels"
        },
        "ImageHeight": {
            "type": "integer",
            "description": "The height of the image in pixels"
        },
        "DateTimeOriginal": {
            "type": "string",
            "description": "The original date and time when the image was created"
        },
        "ExposureTime": {
            "type": "string",
            "description": "The exposure time of the image"
        },
        "FNumber": {
            "type": "number",
            "description": "The F-number (aperture) of the image"
        },
        "ISO": {
            "type": "integer",
            "description": "The ISO speed of the image"
        },
        "FocalLength": {
            "type": "string",
            "description": "The focal length of the lens"
        },
        "Orientation": {
            "type": "string",
            "description": "The orientation of the image"
        },
        "Software": {
            "type": "string",
            "description": "The software used to process the image"
        },
        "Artist": {
            "type": "string",
            "description": "The artist of the image"
        },
        "Copyright": {
            "type": "string",
            "description": "The copyright information of the image"
        },
        "ExposureProgram": {
            "type": "string",
            "description": "The exposure program used"
        },
        "DateTimeCreated": {
            "type": "string",
            "description": "The date and time when the image was created"
        },
        "Lens": {
            "type": "string",
            "description": "The lens used to capture the image"
        },
        "ImageSize": {
            "type": "string",
            "description": "The size of the image"
        },
        "Megapixels": {
            "type": "number",
            "description": "The megapixels of the image"
        }
    },
    "required": [
        "FileName",
        "FileSize",
        "Make",
        "Model",
        "FileType",
        "MIMEType",
        "ImageWidth",
        "ImageHeight",
        "DateTimeOriginal",
        "ExposureTime",
        "FNumber",
        "ISO",
        "FocalLength",
        "Orientation",
        "Software",
        "Artist",
        "Copyright",
        "ExposureProgram",
        "DateTimeCreated",
        "Lens",
        "ImageSize",
        "Megapixels"
    ]
}