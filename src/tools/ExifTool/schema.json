{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "properties": {
        "ExifTool": {
            "additionalProperties": false,
            "description": "Root object containing all EXIF metadata",
            "properties": {
                "Artist": {
                    "description": "Name of the image creator",
                    "type": "string"
                },
                "Copyright": {
                    "description": "Copyright information",
                    "type": "string"
                },
                "CreateDate": {
                    "description": "Date and time when the image was created",
                    "type": "string"
                },
                "DateTimeOriginal": {
                    "description": "Original date and time when the image was taken",
                    "type": "string"
                },
                "Directory": {
                    "description": "Directory containing the image file",
                    "type": "string"
                },
                "ExifByteOrder": {
                    "description": "Byte order of the EXIF data",
                    "type": "string"
                },
                "ExifToolVersion": {
                    "description": "Version of ExifTool used to extract the metadata",
                    "type": "string"
                },
                "ExposureProgram": {
                    "description": "Exposure program used",
                    "type": "string"
                },
                "ExposureTime": {
                    "description": "Exposure time (e.g., '1/10')",
                    "type": "string"
                },
                "FileAccessDate": {
                    "description": "Date the file was last accessed",
                    "type": "string"
                },
                "FileInodeChangeDate": {
                    "description": "Date the file's inode was last changed",
                    "type": "string"
                },
                "FileModifyDate": {
                    "description": "Date the file was last modified",
                    "type": "string"
                },
                "FileName": {
                    "description": "Name of the image file",
                    "type": "string"
                },
                "FilePermissions": {
                    "description": "File permissions in octal format",
                    "type": "string"
                },
                "FileSize": {
                    "description": "Size of the file with unit (e.g., '5.0 MB')",
                    "type": "string"
                },
                "FileType": {
                    "description": "Type of image file (e.g., 'JPEG')",
                    "type": "string"
                },
                "FileTypeExtension": {
                    "description": "File extension (e.g., 'jpg')",
                    "type": "string"
                },
                "FNumber": {
                    "description": "F-number (aperture)",
                    "type": "number"
                },
                "FocalLength": {
                    "description": "Focal length of the lens",
                    "type": "string"
                },
                "ImageHeight": {
                    "description": "Height of the image in pixels",
                    "type": "number"
                },
                "ImageSize": {
                    "description": "Dimensions of the image (e.g., '5568x3712')",
                    "type": "string"
                },
                "ImageWidth": {
                    "description": "Width of the image in pixels",
                    "type": "number"
                },
                "ISO": {
                    "description": "ISO speed rating",
                    "type": "number"
                },
                "LensModel": {
                    "description": "Model of the lens used",
                    "type": "string"
                },
                "Make": {
                    "description": "Camera manufacturer",
                    "type": "string"
                },
                "Megapixels": {
                    "description": "Size of the image in megapixels",
                    "type": "number"
                },
                "MIMEType": {
                    "description": "MIME type of the file",
                    "type": "string"
                },
                "Model": {
                    "description": "Camera model",
                    "type": "string"
                },
                "ModifyDate": {
                    "description": "Date the file was last modified",
                    "type": "string"
                },
                "Orientation": {
                    "description": "Orientation of the image",
                    "type": "number"
                },
                "ResolutionUnit": {
                    "description": "Unit of resolution",
                    "type": "number"
                },
                "SensitivityType": {
                    "description": "Type of sensitivity",
                    "type": "number"
                },
                "Software": {
                    "description": "Software used to process the image",
                    "type": "string"
                },
                "SourceFile": {
                    "description": "Path to the source image file",
                    "type": "string"
                },
                "XResolution": {
                    "description": "Horizontal resolution in DPI",
                    "type": "number"
                },
                "YCbCrSubSampling": {
                    "description": "Subsampling ratio of Y to C",
                    "type": "string"
                },
                "YResolution": {
                    "description": "Vertical resolution in DPI",
                    "type": "number"
                }
            },
            "required": [
                "FileName",
                "FileType",
                "MIMEType",
                "ImageWidth",
                "ImageHeight",
                "ImageSize",
                "Megapixels"
            ],
            "type": "object"
        }
    },
    "required": [
        "ExifTool"
    ],
    "type": "object"
}